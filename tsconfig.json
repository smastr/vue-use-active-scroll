{
	"compilerOptions": {
		"target": "ESNext",
		"useDefineForClassFields": true,
		"module": "ESNext",
		"moduleResolution": "Node",
		"strict": true,
		"jsx": "preserve",
		"resolveJsonModule": true,
		"isolatedModules": true,
		"esModuleInterop": true,
		"lib": ["ESNext", "DOM"],
		"skipLibCheck": true,
		"noEmit": true
	},
	"include": [
		"src/**/*.ts",
		"src/**/*.d.ts",
		"src/**/*.tsx",
		"src/**/*.vue",
		"demo/App.vue.ts",
		"demo/main.ts",
		"demo/main.ts",
		"demo/vite-env.d.ts",
		"demo/vite-env.d.ts",
		"demo/useFakeData.ts",
		"demo/useFakeData.ts"
	],
	"references": [{ "path": "./tsconfig.node.json" }]
}
