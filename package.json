{
	"name": "vue-use-active-scroll",
	"version": "0.8.8",
	"private": false,
	"description": "Reactive and accurate TOC/sidebar links without compromises for Vue 3.",
	"keywords": [
		"vue",
		"vue3",
		"vue-scroll",
		"vue scroll",
		"vue-scroll-active",
		"vue scroll active",
		"vue-active-scroll",
		"vue active scroll",
		"vue-active-link",
		"vue active link",
		"vue-toc",
		"vue toc"
	],
	"license": "MIT",
	"author": {
		"name": "Simone Mastromattei",
		"email": "smastrom@proton.me"
	},
	"main": "dist/index.js",
	"module": "dist/index.mjs",
	"types": "dist/index.d.ts",
	"files": [
		"dist/*"
	],
	"scripts": {
		"build": "vue-tsc && vite build && rimraf dist/_redirects dist/favicon.ico",
		"build:app": "vue-tsc && vite build --mode app",
		"dev": "vite",
		"prepare": "husky install",
		"preview": "vite preview",
		"test": "cypress run --component",
		"test:gui": "cypress open --component"
	},
	"lint-staged": {
		"*.{ts,vue}": "eslint --cache --fix",
		"*.{ts,vue,md}": "prettier --write"
	},
	"devDependencies": {
		"@rollup/plugin-terser": "^0.3.0",
		"@types/node": "^18.11.18",
		"@typescript-eslint/eslint-plugin": "^5.48.2",
		"@typescript-eslint/parser": "^5.48.2",
		"@vitejs/plugin-vue": "^4.0.0",
		"animated-scroll-to": "^2.3.0",
		"cypress": "^12.3.0",
		"eslint": "^8.32.0",
		"eslint-plugin-vue": "^9.9.0",
		"husky": "^8.0.3",
		"prettier": "^2.8.3",
		"rimraf": "^4.1.1",
		"typescript": "^4.9.4",
		"vite": "^4.0.4",
		"vite-plugin-dts": "^1.7.1",
		"vue": "^3.2.45",
		"vue-router": "^4.1.6",
		"vue-tsc": "^1.0.24"
	},
	"peerDependencies": {
		"vue": ">=3.0.0"
	}
}
